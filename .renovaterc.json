{
  "extends": [
    ":semanticCommits"
  ],
  "ignorePaths": [
    ".github/workflows/build.yml"
  ],
  "labels": [
    "maintenance"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ],
      "semanticCommitType": "chore"
    },
    {
      "depTypeList": [
        "dependencies",
        "devDependencies",
        "peerDependencies",
        "optionalDependencies"
      ],
      "semanticCommitType": "fix"
    }
  ],
  "semanticCommitScope": null
}